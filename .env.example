
# ----------------------
# üöÄ Server Environment
# ----------------------

NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# ----------------------
# üóùÔ∏è Session & Security
# ----------------------

SESSION_SECRET=your_super_secret_session_key_here_at_least_32_chars
